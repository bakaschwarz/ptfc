<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" stylesheets="@../style/main.css" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.unibremen.bhuman.ptfc.control.TrainingGenerateController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
         <children>
            <Label text="List of sources for generation:" />
            <ListView fx:id="pngSourcesListView" prefHeight="400.0" prefWidth="200.0" />
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#clearPNGSourcesButton" text="Clear List" />
                  <Button mnemonicParsing="false" onAction="#loadPNGSourceButton" text="Add a directory" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label text="Output filename:" />
                  <TextField fx:id="trainNameField" promptText="train.data" />
                  <Separator orientation="VERTICAL" prefHeight="200.0" prefWidth="50.0" visible="false" />
                  <TextField fx:id="trainOutPathField" editable="false" prefWidth="400.0" promptText="/path/to/output" />
                  <Button mnemonicParsing="false" onAction="#setTrainOutPutPath" text="Set output folder" />
               </children>
            </HBox>
            <Label text="Provide only images in PNG format of the same dimensions. This program uses red as the grayscale image value from the RGB spectrum. So make sure you exported them correctly. How to do that is not my problem, ask Jonas 0. This program will not respond when processing large amount of data. Please be patient. It's not coded the most efficient way." wrapText="true" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="SOMETIMES">
               <children>
                  <Button fx:id="generateDataButton" mnemonicParsing="false" onAction="#generateData" styleClass="generate-button" text="Give me some fann data!" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
